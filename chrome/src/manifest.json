{
  "manifest_version": 3,
  "name": "Vietnamese Typing Extension",
  "version": "1.0",
  "description": "Enables Vietnamese typing using VietUni library. Toggle with double Ctrl key press.",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/vietuni.min.js",
        "scripts/content.js"
      ]
    }
  ],
  "background": {
    "service_worker": "chrome/background.js"
  },
  "icons": {
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
